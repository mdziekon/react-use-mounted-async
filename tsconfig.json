{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "pretty": true,
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "lib": [
            "es2018",
            "dom"
        ],
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "esm",
        "tests",
        "jest.config.ts",
        "jest.config.*.ts"
    ]
}
